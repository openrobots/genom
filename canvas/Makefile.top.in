topbuilddir=.
topsrcdir=	@top_srcdir@
srcdir=		@srcdir@

include $(topbuilddir)/config.mk

SUBDIRS= $(serverdir) $(codelsdir)

config_files = \
	Makefile		\
	$(serverdir)/Makefile	\
	$(codelsdir)/Makefile

# GenoM flags
include $(topsrcdir)/$(autoconfdir)/genom.mk


# --- Directory recursion -----------------------------------------------

# Generic targets
.PHONY: all install depend
all install depend: $(config_files)
	$(MAKE) $@-$(OSAPI)

.PHONY: clean
clean:
	$(MAKE) $@-$(OSAPI)


# OS-specific targets

make_subdirs=\
  for d in ${SUBDIRS}; do (cd $$d; ${MAKE} OSAPI=$${OSAPI} $* ) || exit 2; done

%-posix:
	@OSAPI=posix; $(make_subdirs)

%-rtai:
	@OSAPI=rtai;  $(make_subdirs)
	@OSAPI=posix; $(make_subdirs)


# --- genom -------------------------------------------------------------

.PHONY: regen
regen:
	(cd $(topsrcdir); $(GENOM) $(GENFLAGS) $(GENFILE) $(NEWARGS))
	./config.status


# --- autoconf/autoheader -----------------------------------------------

LIBTOOL_DEPS=   @LIBTOOL_DEPS@

./config.status: $(topsrcdir)/configure
	./config.status --recheck

libtool: $(LIBTOOL_DEPS)
	./config.status --recheck

config.mk: $(topsrcdir)/$(autoconfdir)/config.mk.in
	CONFIG_FILES='$@:$<' CONFIG_HEADERS= ./config.status

$(config_files): %: $(topsrcdir)/%.in config.status
	CONFIG_FILES=$@ CONFIG_HEADERS= ./config.status
