topbuild=.
include $(topbuild)/config.mk

topsrcdir=	@top_srcdir@
srcdir=		@srcdir@
codelsdir=	$codelsDir$
serverdir=	auto

config_files = \
	config.mk		\
	Makefile		\
	$(serverdir)/Makefile	\
	$(codelsdir)/Makefile	\

# GenoM flags
include $(topsrcdir)/auto/configure/genom.mk


# --- Directory recursion -----------------------------------------------

# order matters!
SUBDIRS= $(serverdir) $(codelsdir)

# Generic targets
.PHONY: all install depend
all install depend: $(config_files)
	$(MAKE) $@-$(OSAPI)

.PHONY: clean
clean:
	$(MAKE) $@-$(OSAPI)


# OS-specific targets

make_subdirs=\
  for d in ${SUBDIRS}; do (cd $$d; ${MAKE} OSAPI=$${OSAPI} $* ) || exit 2; done

%-posix:
	@OSAPI=posix; $(make_subdirs)

%-rtai:
	@OSAPI=rtai;  $(make_subdirs)
	@OSAPI=posix; $(make_subdirs)


# --- genom -------------------------------------------------------------

forceregen=
ifeq (${MAKECMDGOALS},regen)
  forceregen=-i
endif

.PHONY: regen
regen: update
	./config.status

.PHONY: update
update:
	(cd $(GENOMWD); $(GENOM) $(forceregen) $(GENFLAGS) $(GENFILE))


# --- autoconf/autoheader -----------------------------------------------

LIBTOOL_DEPS=   @LIBTOOL_DEPS@

./config.status: $(topsrcdir)/configure
	./config.status --recheck

libtool: $(LIBTOOL_DEPS)
	./config.status --recheck

$(config_files):: ./config.status

config.mk:: $(topsrcdir)/$(serverdir)/configure/config.mk.in
	CONFIG_FILES='$@:$<' CONFIG_HEADERS= ./config.status

Makefile:: $(topsrcdir)/$(serverdir)/configure/Makefile.top.in
	CONFIG_FILES='$@:$<' CONFIG_HEADERS= ./config.status

$(serverdir)/Makefile:: $(topsrcdir)/$(serverdir)/configure/Makefile.auto.in
	CONFIG_FILES='$@:$<' CONFIG_HEADERS= ./config.status

$(codelsdir)/Makefile:: $(topsrcdir)/$(serverdir)/configure/Makefile.codels.in
	CONFIG_FILES='$@:$<' CONFIG_HEADERS= ./config.status


