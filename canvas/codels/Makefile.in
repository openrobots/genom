topbuild=..
include $(topbuild)/config.mk

# --- paths -------------------------------------------------------------

topsrcdir=	@top_srcdir@
srcdir=		@srcdir@

prefix=		@prefix@
exec_prefix=	@exec_prefix@
bindir=		@bindir@
libdir=		@libdir@
serverdir=	auto

VPATH=		$(srcdir)


# --- flags -------------------------------------------------------------

CPPFLAGS+= $genomDefines$ -D$(ENDIANNESS)
CPPFLAGS+= -I. -I$(topbuild) -I$(srcdir) -I$(topsrcdir)
CPPFLAGS+= $serversDir$ $(GENOM_INC) $(COM_INC) $(EXTRA_INCLUDES)


# --- source files ------------------------------------------------------

codels_src = \
$codel_files$

codels_obj=	$(codels_src:.c=.lo)


# --- compilation -------------------------------------------------------

all: $(MODULE_BIN)

$(MODULE_BIN): $(USER_LIB)
	$(LTLD) $(CFLAGS) -o $@ $(LDFLAGS) $(EXTRA_LIBS) \
		$(topbuild)/auto/$(MODULE_LIB) $(USER_LIB) \
		$(topbuild)/auto/$(POSTERWRITE_LIB) \
		$(GENOM_LIB) $(COM_LIB) $(OS_LIBS)

$(USER_LIB): $(codels_obj)
	$(LTLD) -static $(CFLAGS) $(codels_obj) -o $@ $(LDFLAGS) \
		-rpath $(libdir)

%.lo: %.c
	$(LTCC) -c $(CPPFLAGS) $(CFLAGS) -o $@ $<


# --- install -----------------------------------------------------------

.PHONY: install install-bin

install: all install-bin

install-bin:
	$(LTINSTALL) $(MODULE_BIN) $(bindir)/$(MODULE_BIN)


# --- clean -------------------------------------------------------------

.PHONY: clean

clean: $(codels_obj)
	$(topbuild)/libtool --mode=clean rm -f $^
	rm -f dependencies


# --- dependencies ------------------------------------------------------

.PHONY: depends
depends dependencies: $(codels_src)
	$(MKDEP) -c$(CC) -odependencies -t.lo $(CPPFLAGS) $?

ifneq (${MAKECMDGOALS},clean)
-include dependencies
endif
