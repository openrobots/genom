host_cpu=	@host_cpu@

module=		$module$
codelsdir=	$codelsDir$
serverdir=	server
autoconfdir=	autoconf


# --- Programs ----------------------------------------------------------

CPP=		@CPP@
PURIFY=		
CC=		@CC@
LTCC=           $(topbuild)/libtool --mode=compile $(CC)
LTLD=           $(topbuild)/libtool --mode=link $(PURIFY) $(CC)
MKDEP=		@MKDEP@
INSTALL=	$(topsrcdir)/$(autoconfdir)/install-sh -c
LTINSTALL=	$(topbuild)/libtool --mode=install $(INSTALL)
LTINSTALL_DATA=	$(topbuild)/libtool --mode=install $(INSTALL) -m 644

SED=		sed

# --- Libraries ---------------------------------------------------------

# executables or modules
MODULE_BIN=	$module$$(BINEXT)
INIT_BIN=	$module$SendInitRqst$(BINEXT)
ESSAY_BIN=	$module$Essay$(BINEXT)

# client libraries
CLIENT_LIB=		lib$module$Client$(LIBEXT)
TCLCLIENT_LIB=		lib$module$TclServ$(LIBEXT)
PROPICECLIENT_LIB=	lib$module$Propice$(LIBEXT)

# libtool 'helper' libs -- static archives
MODULE_LIB=		lib$module$Server.la
USER_LIB=		lib$module$Codels.la
POSTERWRITE_LIB=	lib$module$PosterWrite.la

# --- Servers -----------------------------------------------------------
$genomJOptionsAndServers$

# --- Libraries required ------------------------------------------------

SERVERS_CLIENT_LIB=  $serversClientLib$
SERVERS_ENDIAN_LIB=  $(SERVERS_CLIENT_LIB)

# --- Flags -------------------------------------------------------------

OSAPI?=		@OSAPI@

ifeq ($(OSAPI),vxworks)
OSDEF = VXWORKS
else 
OSDEF = UNIX
endif

MODULES_ROOT=   @abs_top_srcdir@/..

ENDIANNESS=	@ENDIANNESS@

GENOM_DEFINES=  $genomDefines$
GENOM_INCLUDES= $genomIncludes$
CPPFLAGS=	@CPPFLAGS@ -D$(OSDEF)
CFLAGS=		@CFLAGS@
LDFLAGS=	@LDFLAGS@

OBJDIR=		$(OSAPI)-obj

OS_LIBS=	@OS_LIBS@

RTAI_INC=	@RTAI_INC@
KERNEL_INC=	@KERNEL_INC@

TCL_CPPFLAGS=	@TCL_CPPFLAGS@
TCL_LDFLAGS=	@TCL_LDFLAGS@ @TCL_LIB_FLAG@ @TCL_LIBS@

POCOLIBS_INC=	@POCOLIBS_INC@

GENOM_INC=	@GENOM_INC@
GENOM_LIB=	@GENOM_LIB@

EXTRA_INCLUDES=	@EXTRA_INCLUDES@
EXTRA_LIBS=	@EXTRA_LIBS@

-include @abs_top_srcdir@/$(autoconfdir)/local.mk

