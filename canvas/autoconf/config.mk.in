host_cpu=	@host_cpu@

abs_top_srcdir=   @abs_top_srcdir@
abs_top_builddir= @abs_top_builddir@
module=		$module$
codelsdir=	$codelsDir$
serverdir=	server
autoconfdir=	autoconf

prefix=		@prefix@
exec_prefix=	@exec_prefix@
bindir=		@bindir@
libdir=		@libdir@
includedir=	@includedir@/$module$
datadir=	@datadir@/modules

# --- Programs ----------------------------------------------------------

CPP=		@CPP@
PURIFY=		
CC=		@CC@
SED=		sed
MKDEP=		@MKDEP@
MKINSTALLDIRS=  $(top_srcdir)/autoconf/mkinstalldirs

LIBTOOL=        @LIBTOOL@ 
LTCC=           $(LIBTOOL) --mode=compile $(CC)
LTLD=           $(LIBTOOL) --mode=link $(PURIFY) $(CC)
LTRM=           $(LIBTOOL) --mode=clean rm -f
LTINSTALL=	$(LIBTOOL) --mode=install $(INSTALL)

INSTALL_DATA=	$(INSTALL) -m 644

# --- Libraries ---------------------------------------------------------

# executables or modules
MODULE_BIN=	$module$$(BINEXT)
INIT_BIN=	$module$SendInitRqst$(BINEXT)
ESSAY_BIN=	$module$Essay$(BINEXT)

# client libraries
CLIENT_LIB=		lib$module$Client$(LIBEXT)
MY_CLIENT_LIB=          $(GENOM_LIB) $(abs_top_builddir)/server/$(OBJDIR)/$(CLIENT_LIB)
TCLCLIENT_LIB=		lib$module$TclServ$(LIBEXT)
PRSCLIENT_LIB=	lib$module$Openprs$(LIBEXT)

# libtool 'helper' libs -- static archives
MODULE_LIB=		lib$module$Server.la
USER_LIB=		lib$module$Codels.la
POSTERWRITE_LIB=	lib$module$PosterWrite.la

# --- Servers -----------------------------------------------------------
$genomPackages$

# --- Libraries required ------------------------------------------------

SERVERS_CLIENT_LIB=  $serverLibs$
SERVERS_ENDIAN_LIB=  $(SERVERS_CLIENT_LIB)

# --- Flags -------------------------------------------------------------

OSAPI?=		@OSAPI@

ifeq ($(OSAPI),vxworks)
OSDEF = VXWORKS
else 
OSDEF = UNIX
endif

ENDIANNESS=	@ENDIANNESS@

GENOM_DEFINES=  $genomDefines$
GENOM_INCLUDES= $genomIncludes$
CPPFLAGS=	@CPPFLAGS@ -D$(OSDEF)
CFLAGS=		@CFLAGS@
LDFLAGS=	@LDFLAGS@

OBJDIR=		$(OSAPI)-obj

OS_LIBS=	@OS_LIBS@
LIBMATH=        @LIBMATH@

RTAI_INC=	@RTAI_INC@
KERNEL_INC=	@KERNEL_INC@

TCL_CPPFLAGS=	@TCL_CPPFLAGS@
TCL_LDFLAGS=	@TCL_LDFLAGS@ @TCL_LIB_FLAG@ @TCL_LIBS@

POCOLIBS_CFLAGS=	@POCOLIBS_CFLAGS@

GENOM_CFLAGS=	@GENOM_CFLAGS@
GENOM_LIBS=	@GENOM_LIBS@

EXTRA_INCLUDES=	@EXTRA_INCLUDES@
EXTRA_LIBS=	@EXTRA_LIBS@

-include $(abs_top_srcdir)/$(autoconfdir)/local.mk

