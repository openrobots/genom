flist+= \
	server/tclservClient/tclservClientEncode.h

# codels templates
flist+=\
	codels/Makefile.in

# top level templates
flist+=\
	configure.ac.user		\
	Makefile.top.in			\
	acinclude.user.m4			\
	start.pl			\
	end.pl				\
	local.mk.in

# These are searched in builddir instead of srcdir
genlist = \
	autoconf/configure.ac \
	autogen

dirs=autoconf codels openprs server server/tcl server/openprs server/tclservClient

# -----------------------------------------------------------------------

.PHONY: all
all:;

.PHONY: install
install: all
	@for d in $(dirs); do \
	    $(MKINSTALLDIRS) ${DESTDIR}$(CANVASDIR)/$$d; \
	done
	@for f in $(flist); do						\
	    $(CMP) $(srcdir)/$$f ${DESTDIR}$(CANVASDIR)/$$f ; \
	    if test $$? != 0  ; then \
		echo "$(INSTALL_DATA) $(srcdir)/$$f ${DESTDIR}$(CANVASDIR)/$$f";	\
		$(INSTALL_DATA) $(srcdir)/$$f ${DESTDIR}$(CANVASDIR)/$$f;	\
	    fi; \
	done

	@for f in $(genlist); do						\
	    $(CMP) $(builddir)/$$f ${DESTDIR}$(CANVASDIR)/$$f ; \
	    if test $$? != 0 ; then \
		echo "$(INSTALL_DATA) $(builddir)/$$f ${DESTDIR}$(CANVASDIR)/$$f";	\
		$(INSTALL_DATA) $(builddir)/$$f ${DESTDIR}$(CANVASDIR)/$$f;	\
	    fi; \
	done

.PHONY: clean distclean
clean:;

distclean: clean
	rm -f Makefile $(genlist)

.PHONY: depend
depend:

