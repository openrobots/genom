# top level templates
flist+=\
	Makefile.top.in			\
	configure			\
	configure.in			\
	aclocal.m4			\
	start.pl			\
	end.pl

dirs=autoconf codels openprs server server/tcl server/openprs

# -----------------------------------------------------------------------

.PHONY: all
all:;

.PHONY: install
install: all
	@for d in $(dirs); do \
		$(MKINSTALLDIRS) $(CANVASDIR)/$$d; \
  done

	@for f in $(flist); do						\
		if ! $(CMP) $(srcdir)/$$f $(CANVASDIR)/$$f; then \
				echo "$(INSTALL_DATA) $(srcdir)/$$f $(CANVASDIR)/$$f";	\
				$(INSTALL_DATA) $(srcdir)/$$f $(CANVASDIR)/$$f;	\
		fi; \
	done

.PHONY: clean distclean
clean:;

distclean: clean
	rm -f Makefile
