TOPBUILD=../..
include $(TOPBUILD)/config.mk

topsrcdir=	@top_srcdir@
srcdir=		@srcdir@

prefix=		@prefix@
exec_prefix=	@exec_prefix@
datadir=	@datadir@/genom

VPATH=		$(srcdir)

ifneq (,$(findstring pdf,$(LATEX)))
genom_doc=	genom.pdf
else
genom_doc=	genom.ps
endif
figdir=		fig

# -----------------------------------------------------------------------

.PHONY: all
all: fig-links $(genom_doc)

export TEXINPUTS=.:$(srcdir):$(srcdir)/tex:

genom.pdf: genom.tex
	($(LATEX) $^ && $(LATEX) $^) || rm $@

genom.ps: genom.tex
	($(LATEX) $^ && $(LATEX) $^ && dvips -o $@ $^) || rm $@

# this shouldn't be necessary, but TEXINPUTS doen't seem to work with
# figures...
.PHONY: fig-links
fig-links:
	@if test ! -d $(figdir); then		\
		ln -s $(srcdir)/$(figdir) .;	\
	fi

# --- install -----------------------------------------------------------

.PHONY: install

ifneq (:,$(LATEX))
install: all
	$(LTINSTALL_DATA) $(genom_doc) $(datadir)/$(genom_doc)
else
install:
endif


# --- clean -------------------------------------------------------------

.PHONY: clean
clean:
	rm -f $(genom_doc) genom.toc genom.aux genom.log genom.out

distclean: clean
	rm -f Makefile

