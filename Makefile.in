include config.mk

topsrcdir=	@top_srcdir@
srcdir=		@srcdir@

dist_path= bin/genom
dist_name= genom-$(GENOM_MAJOR).$(GENOM_MINOR)

config_files = \
	config.mk		\
	Makefile		\
	lib/Makefile		\
	src/Makefile		\
	include/Makefile	\
	canvas/Makefile		\
	tclserv/server/Makefile	\
	tclserv/client/Makefile	\
	doc/user_guide/Makefile	\
	emacs/Makefile

config_headers = \
	config.h

# --- Directory recursion -----------------------------------------------

# order matters!
SUBDIRS= lib src include canvas emacs
ifeq (yes,$(HAS_TCL))
SUBDIRS+= tclserv/server tclserv/client
endif
ifneq (:,$(LATEX))
SUBDIRS+= doc/user_guide
endif

make_subdirs= @for d in ${SUBDIRS}; do (cd $$d; ${MAKE} $@ ) || exit 2; done

all install depends: $(config_files) $(config_headers)
	$(make_subdirs)

clean:
	$(make_subdirs)


# --- build distribution ------------------------------------------------

dist:
	mkdir -p $(dist_path)
	(cd $(topsrcdir); tar cf - .) | (cd $(dist_path); tar xpf -)
	find $(dist_path) \( -name "CVS" -o -name "*~" \) -exec rm -rf {} \;
	rm -rf $(dist_path)/autom4te.cache
	rm -rf $(dist_path)/canvas/configure/autom4te.cache
	tar cf - $(dist_path) | gzip -c -9 > $(dist_name).tar.gz
	rm -rf $(dist_path)


# --- autoconf/autoheader -----------------------------------------------

config.status: $(topsrcdir)/configure
	./config.status --recheck

libtool: $(LIBTOOL_DEPS)
	./config.status --recheck

$(config_files): %: $(topsrcdir)/%.in config.status
	CONFIG_FILES=$@ CONFIG_HEADERS= ./config.status

$(config_headers): %: $(topsrcdir)/%.in config.status
	CONFIG_FILES= CONFIG_HEADERS=$@ ./config.status
	touch $@
