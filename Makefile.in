top_srcdir=	@top_srcdir@
srcdir=		@srcdir@
top_builddir=	.

prefix=		@prefix@
exec_prefix=	@exec_prefix@
libdir=		@libdir@
datarootdir=	@datarootdir@

INSTALL=	@INSTALL@

include config.mk

dist_name= @PACKAGE_TARNAME@-@PACKAGE_VERSION@

config_files = \
	config.mk			\
	Makefile			\
	genom.pc			\
	lib/Makefile			\
	src/Makefile			\
	include/Makefile		\
	canvas/Makefile			\
        canvas/autogen			\
        canvas/autoconf/configure.ac	\
	tclserv/server/Makefile		\
	tclserv/client/Makefile		\
	doc/user_guide/Makefile		\
	emacs/Makefile			\
	scripts/Makefile

config_headers = \
	genom-config.h

# --- Directory recursion -----------------------------------------------

# order matters!
SUBDIRS= lib

ifneq (yes,$(LIBSONLY))
SUBDIRS+= src

ifeq (yes,$(HAS_TCL))
SUBDIRS+= tclserv/server tclserv/client
endif
ifneq (:,$(LATEX))
SUBDIRS+= doc/user_guide
endif

SUBDIRS+= canvas emacs scripts
endif

SUBDIRS+= include

make_subdirs= @for d in ${SUBDIRS}; do (cd $$d; ${MAKE} $@ ) || exit 2; done

all: $(config_files) $(config_headers)
	$(make_subdirs)

install:: all
	$(make_subdirs)

install::  genom.pc
	$(MKINSTALLDIRS) ${DESTDIR}$(libdir)/pkgconfig
	$(INSTALL) genom.pc ${DESTDIR}$(libdir)/pkgconfig

depend:
	$(make_subdirs)

clean: 
	$(make_subdirs)

distclean: 
	$(make_subdirs)
	rm -f Makefile genom-config.h config.status config.log config.mk libtool genom.pc


# --- build distribution ------------------------------------------------

dist:
	(cd $(top_srcdir); \
	 git archive --format=tar --prefix=$(dist_name)/ $(dist_name) | \
	 gzip -c - ) > $(dist_name).tar.gz


# --- autoconf/autoheader -----------------------------------------------

config.status: $(top_srcdir)/configure
	./config.status --recheck

libtool: $(LIBTOOL_DEPS)
	./config.status --recheck

$(config_files): %: $(top_srcdir)/%.in config.status
	CONFIG_FILES=$@ CONFIG_HEADERS= ./config.status

$(config_headers): %: $(top_srcdir)/%.in config.status
	CONFIG_FILES= CONFIG_HEADERS=$@ ./config.status
	touch $@

