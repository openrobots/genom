top_srcdir=	@top_srcdir@
srcdir=	 	@srcdir@
top_builddir=	@top_builddir@

prefix=		@prefix@
exec_prefix=	@exec_prefix@
bindir=		@bindir@
libdir=		@libdir@
includedir=	@includedir@
datadir=	@datadir@

INSTALL= 	@INSTALL@
VPATH=		$(srcdir)

include $(top_builddir)/config.mk

CPPFLAGS+=	-I$(top_builddir) -I$(top_srcdir)/include -I$(srcdir) -I.
CPPFLAGS+=	$(PORTLIB_CFLAGS)

LDFLAGS+=	@LEXLIB@

# -----------------------------------------------------------------------

SRCS_LEX=  parser.l
SRCS_YACC= parser.y

SRCS = \
	$(SRCS_YACC:.y=.tab.c)	\
	$(SRCS_LEX:.l=.lex.c)	\
	genom.c			\
	cntrlTaskGen.c		\
	errorGen.c		\
	testGen.c		\
	execTaskGen.c		\
	headerGen.c		\
	moduleInitGen.c		\
	msgLibGen.c		\
	posterLibGen.c		\
	openprsEncodeGen.c	\
	openprsDecodeGen.c	\
	openprsMakeGen.c	\
	openprsOpGen.c		\
	openprsGen.c		\
	typeGen.c		\
	printGen.c		\
	printXMLGen.c		\
	endianGen.c		\
	scanGen.c		\
	scopeGen.c		\
	initGen.c		\
	tclGen.c		\
	tclClientGen.c		\
	userExecCodelsGen.c	\
	userCntrlCodelsGen.c	\
	userStartGen.c		\
	configureGen.c		\
	extern_processes.c

OBJS = $(SRCS:.c=.lo)

.PRECIOUS: $(SRCS_YACC:%.y=%.tab.h)

# -----------------------------------------------------------------------

all: $(GENOM)

install: all
	$(MKINSTALLDIRS) ${DESTDIR}$(bindir)
	$(LTINSTALL) $(GENOM) ${DESTDIR}$(bindir)

$(GENOM): $(OBJS) ../lib/lib$(GENOM).la
	$(LTLD) -static $(CFLAGS) $(OBJS) -o $@ \
		../lib/lib$(GENOM).la $(LDFLAGS)

parser.tab.lo: parser.tab.c
	$(LTCC) -static -c $(CPPFLAGS)  $(CFLAGS)	\
		-DINCLUDEDIR='"$(includedir)"'		\
		-DLIBRARYDIR='"$(libdir)"'		\
		-DCANVASDIR='"$(CANVASDIR)"'		\
		-DSTDINCPP='"$(STDINCPP)"'		\
		-o $@ $<

%.lo: %.c
	$(LTCC) -static -c $(CPPFLAGS) $(CFLAGS) -o $@ $<

%.lex.c: %.l
	$(LEX) -o$@ $<

%.tab.c %.tab.h: %.y
	$(YACC) -v -d -b $* $<

clean:
	$(top_builddir)/libtool --mode=clean rm -f $(OBJS) $(GENOM)
	rm -f $(SRCS_YACC:%.y=%.tab.h) $(SRCS_YACC:%.y=%.tab.c) parser.output
	rm -f $(SRCS_LEX:%.l=%.lex.c)

distclean: clean
	rm -f DEPENDANCES Makefile

ifeq ($(findstring clean,$(MAKECMDGOALS)),)
depend DEPENDANCES:: $(SRCS)
	$(MKDEP) -c$(CC) -oDEPENDANCES -t.lo $(CPPFLAGS) $?

include DEPENDANCES
endif

