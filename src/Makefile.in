TOPBUILD=..
include $(TOPBUILD)/config.mk

topsrcdir=	@top_srcdir@
srcdir=		@srcdir@

prefix=		@prefix@
exec_prefix=	@exec_prefix@
bindir=		@bindir@
libdir=		@libdir@
includedir=	@includedir@
datadir=	@datadir@

VPATH=		$(srcdir)

CPPFLAGS+=	-I$(TOPBUILD) -I$(topsrcdir)/include -I$(srcdir) -I.
CPPFLAGS+=	-I$(PORTLIB_INC)

LDFLAGS+=	@LEXLIB@

# -----------------------------------------------------------------------

lexsrcs=  parser.l
yaccsrcs= parser.y

binsrcs=\
	$(yaccsrcs:.y=.tab.c)	\
	$(lexsrcs:.l=.lex.c)	\
	genom.c			\
	cntrlTaskGen.c		\
	errorGen.c		\
	reportsGen.c		\
	essayGen.c		\
	execTaskGen.c		\
	headerGen.c		\
	makeGen.c		\
	moduleInitGen.c		\
	msgLibGen.c		\
	posterLibGen.c		\
	propiceEncodeGen.c	\
	propiceDecodeGen.c	\
	propiceMakeGen.c	\
	propiceOpGen.c		\
	propiceGen.c		\
	typeGen.c		\
	printGen.c		\
	endianGen.c		\
	scanGen.c		\
	scopeGen.c		\
	initGen.c		\
	tclGen.c		\
	tclClientGen.c		\
	userMakeGen.c		\
	userExecCodelsGen.c	\
	userCntrlCodelsGen.c	\
	userStartGen.c		\
	spyDescriptionGen.c	\
	spyStructGen.c		\
	spyServerLibGen.c	\
	configureGen.c	

binobjs = $(binsrcs:.c=.lo)

.PRECIOUS: $(yaccsrcs:%.y=%.tab.h)

# -----------------------------------------------------------------------

.PHONY: all
all: $(GENOM)

.PHONY: install
install: all
	$(LTINSTALL) $(GENOM) $(bindir)/$(GENOM)

$(GENOM): $(binobjs) $(TOPBUILD)/lib/$(LIBGENOM)
	$(LTLD) -static $(CFLAGS) $(binobjs) -o $@ \
		$(TOPBUILD)/lib/$(LIBGENOM) $(LDFLAGS)

parser.tab.lo: parser.tab.c
	$(LTCC) -static -c $(CPPFLAGS)  $(CFLAGS)	\
		-DINCLUDEDIR='"$(includedir)"'		\
		-DLIBRARYDIR='"$(libdir)"'		\
		-DCANVASDIR='"$(CANVASDIR)"'		\
		-DSTDINCPP='"$(STDINCPP)"'		\
		-o $@ $<

%.lo: %.c
	$(LTCC) -static -c $(CPPFLAGS) $(CFLAGS) -o $@ $<

%.lex.c: %.l
	$(LEX) -o$@ $<

%.tab.c %.tab.h: %.y
	$(YACC) -v -d -b $* $<

.PHONY: clean
clean:
	$(TOPBUILD)/libtool --mode=clean rm -f $(binobjs) $(GENOM)
	rm -f $(yaccsrcs:%.y=%.tab.h) $(yaccsrcs:%.y=%.tab.c)
	rm -f $(lexsrcs:%.l=%.lex.c)
	rm -f dependencies

.PHONY: depends
depends dependencies: $(binsrcs)
	$(MKDEP) -c$(CC) -odependencies -t.lo $(CPPFLAGS) $?

ifneq (${MAKECMDGOALS},clean)
-include dependencies
endif
