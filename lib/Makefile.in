TOPBUILD=..
include $(TOPBUILD)/config.mk

topsrcdir=	@top_srcdir@
srcdir=		@srcdir@

prefix=		@prefix@
exec_prefix=	@exec_prefix@
libdir=		@libdir@

VPATH=		$(srcdir)

CPPFLAGS+=	-I$(TOPBUILD) -I$(topsrcdir)/include -I$(srcdir) -I.
CPPFLAGS+=	-I$(PORTLIB_INC) -D$(ENDIANNESS)

LDFLAGS+=	-L$(PORTLIB_LIB) -R$(PORTLIB_LIB)
LDFLAGS+=	-lposterLib -lerrorLib -lcomLib -lportLib $(OS_LIBS)


# -----------------------------------------------------------------------

libsrcs=\
	scan.c			\
	print.c			\
	printScanUtil.c		\
	printState.c		\
	moduleEvents.c		\
	genomReportsLib.c	\
	essayLib.c		\
	h2endian.c

libobjs = $(libsrcs:.c=.lo)

# -----------------------------------------------------------------------

.PHONY: all
all: $(LIBGENOM)

.PHONY: install
install: all
	$(LTINSTALL) $(LIBGENOM) $(libdir)/$(LIBGENOM)

$(LIBGENOM): $(libobjs)
	$(LTLD) $(CFLAGS) $(libobjs) -o $@ $(LDFLAGS) -rpath $(libdir) \
	   -version-info $(GENOM_MAJOR):$(GENOM_MINOR):0

%.lo: %.c
	$(LTCC) -c $(CPPFLAGS) $(CFLAGS) -o $@ $<

.PHONY: clean
clean:
	$(TOPBUILD)/libtool --mode=clean rm -f $(libobjs) $(LIBGENOM)
	rm -f dependencies

.PHONY: depends
depends dependencies: $(libsrcs)
	$(MKDEP) -c$(CC) -odependencies -t.lo $(CPPFLAGS) $?

ifneq (${MAKECMDGOALS},clean)
-include dependencies
endif
