TOPBUILD=	..
topsrcdir=	@top_srcdir@
srcdir=		@srcdir@

prefix=		@prefix@
exec_prefix=	@exec_prefix@
libdir=		@libdir@

include $(TOPBUILD)/config.mk

VPATH=		$(srcdir)

CPPFLAGS+=	-I$(TOPBUILD) -I$(topsrcdir)/include -I$(srcdir) -I.
CPPFLAGS+=	-I$(PORTLIB_INC) -D$(ENDIANNESS)

SHLIB_MAJOR=	1
SHLIB_MINOR=	0

BASENAME=	$(GENOM)
LIB=		lib$(BASENAME).la

-include $(srcdir)/Makefile.$(OSAPI).mk

# -----------------------------------------------------------------------

libsrcs+= \
	printState.c		\
	essayLib.c		\
	genomReportsLib.c	\
	h2endian.c		\
	moduleEvents.c		\
	scan.c			\
	posterXMLLib.c		\
	print.c			\
	printXML.c		\
	printScanUtil.c

libobjs = $(libsrcs:.c=.lo)

# -----------------------------------------------------------------------

.PHONY: all all-os
all: all-os $(LIB)

.PHONY: install
install:: $(LIB)
	$(LTINSTALL) $(LIB) $(libdir)/$(LIB)

$(LIB): $(libobjs)
	$(LTLD) $(CFLAGS) $(libobjs) -o $@ $(LDFLAGS)			\
		-L$(PORTLIB_LIB) -R$(PORTLIB_LIB)			\
		-lposterLib -lerrorLib -lcomLib -lportLib $(OS_LIBS)	\
		-version-info $(SHLIB_MAJOR):$(SHLIB_MINOR)		\
		-rpath $(libdir) -R$(libdir)

%.lo: %.c
	$(LTCC) -c $(CPPFLAGS) $(CFLAGS) -o $@ $<

.PHONY: clean
clean:
	$(TOPBUILD)/libtool --mode=clean rm -f $(libobjs) $(LIB)
	rm -f dependencies

.PHONY: depends
depends dependencies: $(libsrcs)
	$(MKDEP) -c$(CC) -odependencies -t.lo $(CPPFLAGS) $?

ifneq (${MAKECMDGOALS},clean)
-include dependencies
endif

# os-specific rules
include $(topsrcdir)/config.$(OSAPI).mk
