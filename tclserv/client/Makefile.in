top_srcdir=	@top_srcdir@
srcdir=		@srcdir@
top_builddir= @top_builddir@

prefix=		@prefix@
exec_prefix=	@exec_prefix@
libdir=		@libdir@
datadir=	@datadir@

INSTALL=  @INSTALL@
VPATH=		$(srcdir)

include $(top_builddir)/config.mk

CPPFLAGS+=	-I$(top_builddir) -I$(top_srcdir)/include -I$(srcdir) -I.
CPPFLAGS+=	$(PORTLIB_CFLAGS)
CPPFLAGS+=	-D$(ENDIANNESS)

LDFLAGS+=	$(PORTLIB_LIBS)

# -----------------------------------------------------------------------

tlist=\
	cs.tcl		\
	load.tcl	\
	misc.tcl	\
	pmtools.tcl	\
	server.tcl

pkgfile= pkgIndex.tcl

# -----------------------------------------------------------------------

.PHONY: all
all: $(pkgfile)

$(pkgfile): $(pkgfile).in
	$(SED) \
		-e 's,@canvasdir\@,$(CANVASDIR),g'			\
		-e 's,@genomversion\@,$(GENOM_MAJOR).$(GENOM_MINOR),g'	\
		< $< > $@


# --- install -----------------------------------------------------------

.PHONY: install
install:: $(pkgfile)
	$(MKINSTALLDIRS) ${DESTDIR}$(CANVASDIR)/tcl
	@for f in $(tlist); do						\
		$(CMP) $(srcdir)/$$f ${DESTDIR}$(CANVASDIR)/tcl/$$f || (\
			echo "$(INSTALL_DATA) $(srcdir)/$$f ${DESTDIR}$(CANVASDIR)/tcl/$$f"; \
			$(INSTALL_DATA) $(srcdir)/$$f ${DESTDIR}$(CANVASDIR)/tcl/$$f; ) \
	done
	$(MKINSTALLDIRS) ${DESTDIR}$(datadir)/genom
	$(INSTALL_DATA) $(pkgfile) ${DESTDIR}$(datadir)/genom/$(pkgfile)


# --- clean -------------------------------------------------------------

.PHONY: clean
clean:
	rm -f pkgIndex.tcl

distclean: clean
	rm -f Makefile

# --- dependencies ------------------------------------------------------

.PHONY: depend
depend:
