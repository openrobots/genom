top_srcdir=	@top_srcdir@
srcdir=		@srcdir@
top_builddir=	@top_builddir@

prefix=		@prefix@
exec_prefix=	@exec_prefix@
bindir=		@bindir@
libdir=		@libdir@
includedir=	@includedir@/genom
datarootdir=	@datarootdir@
datadir=	@datadir@/tclserv

INSTALL=  @INSTALL@
VPATH=		$(srcdir) $(top_srcdir)/compat

include $(top_builddir)/config.mk

CPPFLAGS+=	-I$(top_builddir) -I$(top_srcdir)/include -I$(srcdir) -I.
CPPFLAGS+=	$(PORTLIB_CFLAGS)
CPPFLAGS+=	-D$(ENDIANNESS)
LDFLAGS+=	$(PORTLIB_LIBS)


# -----------------------------------------------------------------------

ilist=\
	tclServ.h	\
	tcl_cs.h

tlist=\
	init.tcl	\
	cs.tcl		\
	load.tcl	\
	server.tcl	\
	pkgIndex.tcl

SRCS = \
	main.c		\
	tcl_cs.c	\
	tcl_enum.c

OBJS = $(SRCS:.c=.lo) @LIBOBJS@


# -----------------------------------------------------------------------

.PHONY: all
all: $(TCLSERV)

$(TCLSERV): $(OBJS)
	$(LTLD) -export-dynamic $(CFLAGS) $(OBJS) -o $@	\
		$(LDFLAGS) $(TCL_LDFLAGS)

main.lo: main.c
	$(LTCC) -static -c $(CPPFLAGS) $(TCL_CPPFLAGS)			\
	  -DTCLSERV_LIBDIR='"${libdir}/tclserv"' -DTCLSERV_DATA='"${datadir}"'	\
	  $(CFLAGS) -o $@ $<

%.lo: %.c
	$(LTCC) -static -c $(CPPFLAGS) $(TCL_CPPFLAGS) $(CFLAGS) -o $@ $<


# --- install -----------------------------------------------------------

.PHONY: install
install:: $(TCLSERV)
	$(MKINSTALLDIRS) ${DESTDIR}$(bindir)
	$(LTINSTALL) $(TCLSERV) ${DESTDIR}$(bindir)/$(TCLSERV)
	$(MKINSTALLDIRS) ${DESTDIR}$(includedir)
	@for f in $(ilist); do						\
		$(INSTALL_DATA) $(srcdir)/$$f ${DESTDIR}$(includedir)/$$f; \
	done
	$(MKINSTALLDIRS) ${DESTDIR}$(datadir)
	@for f in $(tlist); do						\
		$(INSTALL_DATA) $(srcdir)/$$f ${DESTDIR}$(datadir)/$$f;	\
	done


# --- clean -------------------------------------------------------------

.PHONY: clean
clean:
	$(top_builddir)/libtool --mode=clean rm -f $(OBJS) $(TCLSERV)

distclean: clean
	rm -f DEPENDANCES Makefile


# --- dependencies ------------------------------------------------------

ifeq ($(findstring clean,$(MAKECMDGOALS)),)
depend DEPENDANCES:: $(SRCS)
	$(MKDEP) -c$(CC) -oDEPENDANCES -t.lo $(CPPFLAGS) $(TCL_CPPFLAGS) $?

include DEPENDANCES
endif

# os-specific rules
include $(top_srcdir)/config.$(OSAPI).mk
