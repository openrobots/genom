TOPBUILD=../..

topsrcdir=	@top_srcdir@
srcdir=		@srcdir@

prefix=		@prefix@
exec_prefix=	@exec_prefix@
bindir=		@bindir@
libdir=		@libdir@
includedir=	@includedir@/genom
datadir=	@datadir@/tclserv

include $(TOPBUILD)/config.mk

VPATH=		$(srcdir)

CPPFLAGS+=	-I$(TOPBUILD) -I$(topsrcdir)/include -I$(srcdir) -I.
CPPFLAGS+=	-I$(PORTLIB_INC)
CPPFLAGS+=	-D$(ENDIANNESS)

LDFLAGS+=	-L$(PORTLIB_LIB) -R$(PORTLIB_LIB)
LDFLAGS+=	-lposterLib -lerrorLib -lcomLib -lportLib $(OS_LIBS)


# -----------------------------------------------------------------------

ilist=\
	tclServ.h	\
	tcl_cs.h

tlist=\
	init.tcl	\
	cs.tcl		\
	load.tcl	\
	server.tcl	\
	pkgIndex.tcl

binsrcs=\
	main.c		\
	tcl_cs.c	\
	tcl_enum.c

binobjs = $(binsrcs:.c=.lo)


# -----------------------------------------------------------------------

.PHONY: all
all: $(TCLSERV)

$(TCLSERV): $(binobjs)
	$(LTLD) -export-dynamic $(CFLAGS) $(binobjs) -o $@	\
		$(LDFLAGS) $(TCL_LDFLAGS)

main.lo: main.c
	$(LTCC) -static -c $(CPPFLAGS) $(TCL_CPPFLAGS)			\
	  -DTCLSERV_LIBDIR='"${libdir}"' -DTCLSERV_DATA='"${datadir}"'	\
	  $(CFLAGS) -o $@ $<

%.lo: %.c
	$(LTCC) -static -c $(CPPFLAGS) $(TCL_CPPFLAGS) $(CFLAGS) -o $@ $<


# --- install -----------------------------------------------------------

.PHONY: install
install:: $(TCLSERV)
	$(LTINSTALL) $(TCLSERV) $(bindir)/$(TCLSERV)
	@for f in $(ilist); do						\
		$(LTINSTALL_DATA) $(srcdir)/$$f $(includedir)/$$f;	\
	done
	@for f in $(tlist); do						\
		$(LTINSTALL_DATA) $(srcdir)/$$f $(datadir)/$$f;		\
	done


# --- clean -------------------------------------------------------------

.PHONY: clean
clean:
	$(TOPBUILD)/libtool --mode=clean rm -f $(binobjs) $(TCLSERV)
	rm -f dependencies


# --- dependencies ------------------------------------------------------

.PHONY: depends
depends dependencies: $(binsrcs)
	$(MKDEP) -c$(CC) -odependencies -t.lo $(CPPFLAGS) $(TCL_CPPFLAGS) $?

ifneq (${MAKECMDGOALS},clean)
-include dependencies
endif
